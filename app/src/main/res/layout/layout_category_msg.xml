<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/category_msg_holder">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_msg"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/no_result_icon_height"
            android:layout_gravity="center"
            android:src="@drawable/category_temp"
            android:contentDescription="@string/category_msg"/>

        <com.b4g.sid.books4geeks.CustomViews.sspBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dist_large"
            android:layout_marginRight="@dimen/dist_xlarge"
            android:textSize="@dimen/text_large"
            android:gravity="center"
            android:text="@string/category_msg"/>


    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"/>

</FrameLayout>
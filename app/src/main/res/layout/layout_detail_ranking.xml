<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_ranking_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dist_medium"
    android:orientation="vertical"
    android:padding="@dimen/dist_large"
    android:background="@color/colorTextSecondary"
    tools:showIn="@layout/fragment_detail">

    <!-- Header -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dist_large"
            android:layout_height="@dimen/dist_large"
            android:src="@drawable/ic_carrot"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription" />

        <com.b4g.sid.books4geeks.CustomViews.sspBoldTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dist_large"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_large"
            android:text="@string/detail_ranking" />

    </LinearLayout>

    <!-- Value -->
    <com.b4g.sid.books4geeks.CustomViews.sspLight
        android:id="@+id/book_current_rank"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dist_medium"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/colorTextPrimary"
        tools:text="Current Rank : 2"/>

    <!-- Value -->
    <com.b4g.sid.books4geeks.CustomViews.sspLight
        android:id="@+id/book_weeks_list"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dist_medium"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/colorTextPrimary"
        tools:text="Weeks on List : 7"/>

</LinearLayout>
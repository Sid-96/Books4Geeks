<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="@dimen/error_image_width"
            android:layout_height="@dimen/error_image_width"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/category_temp"
            android:contentDescription="@string/desc_book"/>
        
        
        <com.b4g.sid.books4geeks.CustomViews.sspRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dist_large"
            android:layout_gravity="center"
            android:text="@string/no_book_found"
            android:textSize="@dimen/text_large"/>
        
    </LinearLayout>

</FrameLayout>
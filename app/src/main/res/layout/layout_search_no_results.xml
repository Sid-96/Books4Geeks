<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/search_no_results"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/no_result_icon_height"
        android:layout_gravity="center"
        android:src="@drawable/ic_search_no_results"
        android:contentDescription="@string/desc_no_result"/>
    
    <com.b4g.sid.books4geeks.ui.CustomViews.sspBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dist_large"
        android:gravity="center"
        android:textSize="@dimen/dist_large"
        android:text="@string/desc_no_result"/>


</LinearLayout>